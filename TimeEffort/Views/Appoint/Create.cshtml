@model TimeEffort.Models.AppointViewModel
@using TimeEffort.Helper
@{
    ViewBag.Title = "Create";
}

<h2>Create an appointment</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
       
        <hr />
        @Html.ValidationSummary(true)
        <div class="form-group">
        @Html.LabelForRequired(model => model.UserID, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.UserID, (SelectList)ViewBag.Users)
            @Html.ValidationMessageFor(model => model.UserID)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelForRequired(model => model.ProjectID, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.ProjectID, (SelectList)ViewBag.Projects)
            @Html.ValidationMessageFor(model => model.ProjectID)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelForRequired(model => model.RoleID, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.RoleID, (SelectList)ViewBag.Roles)
            @Html.ValidationMessageFor(model => model.RoleID)
        </div>
    </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Appoint" class="btn btn-default" />
                <input type="button" onclick="location.href='@Url.Action("Index","Appoint")'" value="Cancel" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
