@model TimeEffort.Models.RegistrationViewModel
@using TimeEffort.Helper
@{

    ViewBag.Title = "Registration";    
}

<h2>New User Registration</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
