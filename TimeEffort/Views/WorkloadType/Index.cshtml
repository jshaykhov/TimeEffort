@model IEnumerable<TimeEffort.Models.WloadTypeViewModel>

@{
    ViewBag.Title = "Workload Types";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>List of Workload Types</h2>

<p>
    @Html.ActionLink("Create New Type", "Create",null ,new { @class = "btn btn-sm btn-success .btn-sx" })
</p>
<table class="table table-condensed">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.WloadType)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.WloadType)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-sm btn-info .btn-sx" })
                @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-sm btn-info .btn-sx" })
            </td>
        </tr>
    }

</table>
