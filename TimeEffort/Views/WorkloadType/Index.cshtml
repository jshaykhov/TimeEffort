@model IEnumerable<TimeEffort.Models.WloadTypeViewModel>

@{
    ViewBag.Title = "Workload Types";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>List of Workload Types</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.WloadType)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.WloadType)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
<p>
    @Html.ActionLink("Create New", "Create")
</p>