@model TimeEffort.Models.WloadTypeViewModel

@{
    ViewBag.Title = "Removing Workload Type";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>Are you sure to delete this Workload Type?</h2>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.WloadType)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.WloadType)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> 
            <input type="button" onclick="location.href='@Url.Action("Index","WorkloadType")'" value="Cancel" class="btn btn-default" />
        </div>
    }
</div>
